{
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "handle-callback-err": "off",
    "no-console": "off",
    "no-empty-function": "error",
    "no-shadow": ["error", { "allow": ["err", "resolve", "reject"] }],
    "no-var": "error",
    "prefer-const": "error"
  }
}
